@model TaskControl.Models.TaskDeleteViewModel
    <hr />
<h3>Вы уверены, что хотите удалить "@Model.parentModel.TaskName"?</h3>
<div>
    <hr />

    @if (Model.ChildModels.Count != 0)
    {
        <h4>В том числе будут удалены:</h4>
        @foreach (var item in Model.ChildModels)
        {

            <h6>@item.TaskName</h6>
        }
        <hr>
    }

    <form asp-action="TaskDelete">
        <input type="hidden" asp-for="parentModel.ID" />
        <input type="submit" value="Безвозвратно удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться</a>
    </form>
</div>
