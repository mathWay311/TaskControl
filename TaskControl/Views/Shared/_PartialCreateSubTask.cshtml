@model TaskControl.Models.TaskViewModel

@{
    var parentModel = (TaskViewModel)ViewData["ParentModel"];
}


<hr />
<h4>Создать подзадачу</h4>

<h1>К задаче "@parentModel.TaskName"</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSubTask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <i class="fa fa-file-o"></i> Название
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa fa-list"></i> Описание
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa fa-user"></i> Исполнитель(-и) задачи
                <input asp-for="TaskExecutors" class="form-control" />
                <span asp-validation-for="TaskExecutors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa fa-calendar"></i> Ожидаемая дата завершения
                <input asp-for="EstimatedEndDate" class="form-control" />
                <span asp-validation-for="EstimatedEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ParentID" class="form-control" value=@parentModel.ID />
                <span asp-validation-for="ParentID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Добавить подзадачу" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
