@model TaskControl.Models.TaskViewModel

@{
    ViewData["Title"] = "Create";
}

@section Content{
    <h1>Назначить задачу</h1>

    <h4>Добавьте описание своей задачи и выберите планируемое время завершения</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateTask">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <i class="fa fa-file-o"></i> Название
                    <input asp-for="TaskName" class="form-control" />
                    <span asp-validation-for="TaskName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <i class="fa fa-list"></i> Описание
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <i class="fa fa-user"></i> Исполнитель(-и) задачи
                    <input asp-for="TaskExecutors" class="form-control" />
                    <span asp-validation-for="TaskExecutors" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <i class="fa fa-calendar"></i> Ожидаемая дата завершения
                    <input asp-for="EstimatedEndDate" class="form-control" />
                    <span asp-validation-for="EstimatedEndDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Добавить задачу</button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Вернуться</a>
    </div>

}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



@section LeftBar {
    <h1><i class="fa fa-sticky-note"></i> TaskControl</h1>
    <h6>Система управления задачами </h6>
}