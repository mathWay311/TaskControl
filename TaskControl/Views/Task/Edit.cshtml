@model TaskControl.Models.TaskModel

@{
    ViewData["Title"] = "Редактировать " + Model.TaskName;
}

<h1>Редактировать</h1>

<h4>@Model.TaskName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="TaskName" class="control-label"></label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input  asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskExecutors" class="control-label"></label>
                <input asp-for="TaskExecutors" class="form-control" />
                <span asp-validation-for="TaskExecutors" class="text-danger"></span>
            </div>
            <div type="hidden" class="form-group">
                <input type= "hidden" asp-for="RegistrationDate" class="form-control" />
                <span asp-validation-for="RegistrationDate" class="text-danger"></span>
            </div>
            <div type= "hidden" class="form-group">
                <input type= "hidden" asp-for="taskStatus" class="form-control"/>
                <span asp-validation-for="taskStatus" class="text-danger"></span>
            </div>
            <div  type="hidden" class="form-group">
                <input type="hidden" asp-for="EstimatedEndDate" class="form-control" />
                <span asp-validation-for="EstimatedEndDate" class="text-danger"></span>
            </div>
            <div type="hidden" class="form-group">
                <input type="hidden" asp-for="ParentID" class="form-control" />
                <span asp-validation-for="ParentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
